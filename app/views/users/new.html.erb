

<div class="signup">

  <h1>Sign Up!</h1>
  <%= form_for(@user) do |f| %>
 <%= render 'shared/error_messages', object: f.object %>

  <div class="field" >
   <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control input-lg", :required => true %>
  </div>

    <div class="field">
     <label>User Type</label>
  <%= f.select :user_type, options_for_select(user_options), { prompt: 'Select user type' },{:class => "form-control"} %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>


  <div class="field">
   <%= f.label :email, class: "control-label" %>
    <%= f.email_field :email, class: "form-control input-lg", :required => true %>
  </div>
  <div class="field">
     <%= f.label :password, class: "control-label" %>
    <%= f.password_field :password, class: "form-control", :required => true %>
  </div>
  <div class="field">
   <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", :required => true %>
  </div>
  <div class="actions">
    <%= f.submit "Sign-up", class: "btn btn-primary btn-lg" %>
    </div>
<% end %>

</div>

 