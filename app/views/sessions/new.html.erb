<h1>Login</h1>
<div class="login">
  <%= form_tag sessions_path do %>
  <div class="form-group" ,style: "font-size: 5em;" >
  <label class="labletag">Email:</label>
  <%= text_field_tag :email, params[:email] , class: 'form-control', placeholder: 'Email',:required => true %>
  </div>


  <div class="form-group"">
    <label class="labletag">Password:</label>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password',:required => true  %>
  </div>

  
<div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>
      </div>
</div>


 <div class="form-group"style="margin-left: 400px;margin-right: 800px">        
      <div class="col-sm-offset-2 col-sm-10">
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <%= submit_tag "Log in", class: "btn btn-primary btn-lg" %>
      </div>
</div>

  
<% end %>
  
</div>
