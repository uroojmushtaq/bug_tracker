<%= form_tag sessions_path do %>
  <div class="form-group" style="margin-left: 500px;margin-right: 800px">
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] , class: 'form-control', placeholder: 'Email' %>
  </div>


  <div class="form-group" style="margin-left: 500px;margin-right: 800px">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
  </div>

  
<div class="form-group"style="margin-left: 500px;margin-right: 800px">        
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>
      </div>
</div>


 <div class="form-group"style="margin-left: 500px;margin-right: 800px">        
      <div class="col-sm-offset-2 col-sm-10">
        <!-- <button type="submit" class="btn btn-default">Submit</button> -->
        <%= submit_tag "Log in" %>
      </div>
</div>

  
<% end %>